terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "9.9.9"
    }
  }
  provider_installation {
    filesystem_mirror {
      path    = "/root/.terraform.d/plugins/"
      include = ["hashicorp/aws"]
    }
    direct {
      exclude = ["hashicorp/aws"]
    }
  }
}
